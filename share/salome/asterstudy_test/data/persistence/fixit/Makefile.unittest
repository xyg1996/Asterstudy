#------------------------------------------------------------------------------
diff4ast = $(patsubst %.ast,%.diff4ast,$(wildcard *.ast))

all: clean $(diff4ast)
	@echo "OK"

clean:
	rm --force *.diff* *.ast.* *.ajs.*

#------------------------------------------------------------------------------
%.diff4ast: %.ast.2
	  diff4ast $*.ast $< > $@ 

%.ast.2: %.ajs.2
	ajs2ast $< $@

%.ajs.2: %.ast
	ast2ajs $< $@

#------------------------------------------------------------------------------
